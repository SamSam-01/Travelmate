    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Flutter",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "Simulator",
            "request": "launch",
            "type": "dart",
            "program": "front/lib/main.dart",
            "args": [
                "--flavor",
                "dev",
                "--dart-define",
                "FLAVOR=dev"
            ],
            "cwd": "front"
        },
        {
            "name": "front",
            "cwd": "front",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "front (profile mode)",
            "cwd": "front",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "front (release mode)",
            "cwd": "front",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        }
    ]
}